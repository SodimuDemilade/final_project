#:kivy 1.11.1
<CategoryList@BoxLayout>:
    orientation: "vertical"
    MDToolbar:
        title: "Namibia Job Hunt"
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .5, 'center_y': .15}
        left_action_items: [["menu", lambda x: None]]
    RecycleView:
        id: rv
        viewclass: 'CategoryCard'
        key_size: 'height'
        data: app.category_list
        RecycleGridLayout:
            padding: dp(10)
            spacing: dp(10)
            cols: 2
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<CategoryCard>:
    orientation: 'vertical'
    # size_hint: (0.5, 0.7) # seems to have no effect in RecycleGridLayout
    image_src: "transport.png"
    category_title: "Transport"
    last_updated: "15/02/2015"
    AsyncImage:
        source: root.image_src
        allow_stretch: True
    BoxLayout:
        size_hint_y: 0.1
        MDSeparator:
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.5
        MDLabel:
            text: root.category_title
            font_style: "Body1"
            valign: "center"
            halign: "center"
            pos_hint: {"center_y": 0.5}
            theme_text_color: 'Custom'
            text_color: (1, 1, 1, 1) if app.theme_cls.theme_style == "Dark" else (0, 0, 0, 1)
        BoxLayout:
            orientation: "horizontal"
            MDIconButton:
                icon: 'update'
                pos_hint: {"center_y": 0.6}
            MDLabel:
                text: root.last_updated
                font_style: "Caption"
                valign: "center"
                halign: "left"
                # pos_hint: {"center_y": 0.5, "center_x":0.3}
                theme_text_color: 'Custom'
                text_color: (1, 1, 1, 1) if app.theme_cls.theme_style == "Dark" else (0, 0, 0, 1)

