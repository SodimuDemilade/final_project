#:kivy 1.11.1
<LoginScreen@Screen>:
    name: "login_screen"
    on_enter:
        app.animate_background(lla)
        app.animate_card(box_card)
    LoginLayout:
        id: lla
    MDCard:
        id: box_card
        orientation: "vertical"
        size_hint: [0.8, 0.65]
        pos_hint: {"center_x": 0.5, "center_y": 0}

        BoxLayout:
            padding: [15, 0, 15, 0]
            orientation: "vertical"
            MDLabel:
                text: "PUT NAME HERE"
                text_size: self.size
                font_size: 35
                bold: True
                halign: 'center'
                valign: 'middle'

            MDLabel:
                text: "WELCOME TO BLA BLA BLA: Automating your learning"
                halign: "center"
                valign: "middle"
                bold: True
                color: utils.get_color_from_hex("#006233")
            MDLabel:
                text: "Please click on start app to start the application or save details if not saved already"
                halign: "center"
                valign: "middle"
                bold: False
                color: utils.get_color_from_hex("#006233")


        BoxLayout:
            orientation: "vertical"
            MDFillRoundFlatButton:
                text: "START APP"
                bold: True
                size_hint_x: 0.8
                pos_hint: {"center_x": .5}
                on_release:
                    app.main()
            MDRectangleFlatButton:
                text: "Save Details Here"
                pos_hint: {"center_x": .5}
                on_release:
                    app.manage_screens("registration_screen", "add")
                    app.change_screen("registration_screen")
            MDRectangleFlatButton:
                text: "PopUp"
                pos_hint: {"center_x": .5}
                on_release:
                    Factory.MyPopup().open()

<RegistrationScreen@Screen>:
    name: "registration_screen"
    on_enter:
        app.animate_background(lla)
    LoginLayout:
        id: lla
    BoxLayout:
        size_hint: [0.8, 0.6]
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        MDCard:
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "[color=000000]PUT NAME HERE[/color]"
                    markup: True
                    text_size: self.size
                    font_size: 35
                    bold: True
                    halign: 'center'
                    valign: 'middle'

                MDLabel:
                    text: "SAVE DETAILS"
                    halign: "center"
                    valign: "middle"
                    bold: True
                    color: utils.get_color_from_hex("#006233")
            MDTextField:
                id: username
                hint_text: "Username"
                helper_text: "Username"
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: password
                hint_text: "Password"
                helper_text: "Password"
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                password: True
            BoxLayout:
                orientation: "vertical"
                MDFillRoundFlatButton:
                    text: "SAVE DETAILS"
                    size_hint_x: 0.8
                    pos_hint: {"center_x": .5}
                    on_release:
                        app.callback(username.text, password.text)
                        app.change_screen("login_screen")
                MDRectangleFlatButton:
                    text: "Already have an account?"
                    pos_hint: {"x": .2, "y": 0.1}
                    on_release:
                        app.change_screen("login_screen")

<LoginLayout@BoxLayout>:
    orientation: "vertical"
    BoxLayout:
        id: bx
        orientation: "vertical"
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#6633FF")
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [0, 0, 30, 30]
    FloatLayout:
        id: circles
        orientation: "horizontal"

        Scatter:
            size_hint: None,None

            Widget:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#0000FF")
                    Ellipse:
                        pos: self.pos
        Scatter:
            size_hint: None,None
            Widget:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#7f00ff")
                    Ellipse:
                        pos: self.pos
        Scatter:
            size_hint: None, None
            Widget:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#00B7EB")
                    Ellipse:
                        pos: self.pos

<HomeScreen>:
    MDToolbar:
        id: toolbar
        title: "Test MDBottomNavigation"
        md_bg_color: app.theme_cls.primary_color
        left_action_items: [["menu", lambda x: None]]

    MDBottomNavigation:
        id: panel

        MDBottomNavigationItem:
            name: "home"
            text: "Home"
            icon: "home-variant"

            CategoryList:
                id: cat_list

        MDBottomNavigationItem:
            name: "search"
            text: "Search"
            icon: "magnify"

            MDLabel:
                font_style: "Body1"
                theme_text_color: "Primary"
                text: "Search screen over here"
                halign: "center"

        MDBottomNavigationItem:
            name: "profile"
            text: "Profile"
            icon: "account"

            MDLabel:
                font_style: "Body1"
                theme_text_color: "Primary"
                text: "Profile screen over here"
                halign: "center"
